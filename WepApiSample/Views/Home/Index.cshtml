@*Web API 호출*@
<script src="~/wepApiScript/indexProduct.js" type="text/javascript"></script>

<h1>All Products</h1>
<div class="navbar-collapse collapse">
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("AddProduct", "AddProduct", "Home")</li>
        <li>@Html.ActionLink("UpdateProduct", "UpdateProduct", "Home")</li>
    </ul>
</div>

<div class="form-horizontal">
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <table id="products">
                <tr>
                    <td class="col-md-2 control-label">ID</td>
                    <td>Name</td>
                    <td>Category</td>
                    <td>Price</td>
                </tr>
            </table>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <select id="value" class="form-control">
                <option value="id">ID</option>
                <option value="category">Category</option>
            </select>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="text" id="selectVlaue" class="col-md-2 control-label" />
            <input type="button" value="Search" id="find" class="btn btn-default" />
            <input type="button" value="Delete" id="removeProduct" class="btn btn-default" />
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <ul id="result" />
        </div>
    </div>
</div>