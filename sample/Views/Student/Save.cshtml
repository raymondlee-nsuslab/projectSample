@model ApiReferences.Student
    
<h2>Save</h2>
@using (Html.BeginForm("Save", "Student", FormMethod.Post, new {id = "popupForm"}))
{
    if (Model != null && Model.StudentId > 0)
    {
        @Html.HiddenFor(s => s.StudentId)
    }
    if (Model != null && Model.CourseId > 0)
    {
        @Html.HiddenFor(c => c.CourseId)
    }
    if (Model != null && Model.EnrollmentId > 0)
    {
        @Html.HiddenFor(e => e.EnrollmentId)
    }

    <div class="form-group">
        <label>Last Name</label>
        @Html.TextBoxFor(s => s.LastName, new {@class = "form-control"})
        @Html.ValidationMessageFor(s => s.LastName)
    </div>

    <div class="form-group">
        <label>First Mid Name</label>
        @Html.TextBoxFor(s => s.FirstMidName, new { @class = "form-control" })
        @Html.ValidationMessageFor(s => s.FirstMidName)
    </div>

    <div class="form-group">
        <label>Title</label>
        @Html.TextBoxFor(s => s.Title, new { @class = "form-control" })
        @Html.ValidationMessageFor(s => s.Title)
    </div>
    <div>
        <input type="submit" value="Save"/>
    </div>

    <div class="form-group">
        <p id="error"></p>
    </div>

}
